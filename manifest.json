{
  "manifest_version": 2,

  "name": "GithubLOC",
  "description": "This extension counts the lines of code in a github repository",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://github.com/*"],
    "js": ["inject_script.js"]
  }],
  "web_accessible_resources": [
    "main.js"
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}